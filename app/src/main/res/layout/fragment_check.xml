<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.dventus_hq.demohandheldapp.LiveConsumption"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="SMART WATER METER DATA LOGGER"
            android:id="@+id/textView45"
            android:layout_gravity="center"
            android:textColor="#01579B"
            android:textSize="30dp"
            android:layout_marginTop="15dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Meter ID: "
                        android:id="@+id/textView42"
                        android:textSize="22dp"
                        android:layout_gravity="center"
                        android:textColor="#01579B"
                        android:layout_marginLeft="10dp" />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_horizontal">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Liter"
                        android:id="@+id/radioButton3"
                        android:checked="false"
                        android:textSize="17dp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gallon"
                        android:id="@+id/radioButton4"
                        android:checked="false"
                        android:textSize="17dp"
                        android:layout_marginLeft="30dp" />
                </RadioGroup>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Flow Rate:"
                            android:id="@+id/textView26"
                            android:textSize="22dp"
                            android:layout_gravity="center_vertical"
                            android:textColor="#01579B"
                            android:layout_marginLeft="10dp" />

                        <FrameLayout
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:background="#E0E0E0"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="39dp">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="New Text"
                                android:id="@+id/flowLS"
                                android:layout_gravity="center" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="LPM"
                            android:id="@+id/textView27"
                            android:textColor="#000000"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="7dp"
                            android:textSize="17dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Consumption:"
                            android:id="@+id/textView29"
                            android:textSize="22dp"
                            android:layout_gravity="center_vertical"
                            android:textColor="#01579B"
                            android:layout_marginLeft="10dp" />

                        <FrameLayout
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:background="#E0E0E0"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="7dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Medium Text"
                                android:id="@+id/consumptionLiters"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textSize="20dp" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Liters"
                            android:id="@+id/textView30"
                            android:textColor="#000000"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="7dp"
                            android:textSize="17dp" />

                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Alarms"
                    android:id="@+id/textView43"
                    android:textColor="#01579B"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <FrameLayout
                            android:layout_width="100dp"
                            android:id="@+id/reverseFrame"
                            android:layout_height="20dp"
                            android:background="#BDBDBD" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Reverse Flow"
                            android:id="@+id/textView47"
                            android:textSize="17dp"
                            android:layout_marginLeft="7dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp" >

                        <FrameLayout
                            android:layout_width="100dp"
                            android:layout_height="20dp"
                            android:id="@+id/frameLayout5"
                            android:background="#BDBDBD" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Leak"
                            android:id="@+id/textView49"
                            android:textSize="17dp"
                            android:layout_marginLeft="7dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <FrameLayout
                            android:layout_width="100dp"
                            android:layout_height="20dp"
                            android:background="#BDBDBD"
                            android:id="@+id/contaminationFrame"
                            android:layout_marginBottom="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Contamination"
                            android:id="@+id/textView50"
                            android:textSize="17dp"
                            android:layout_marginLeft="7dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <FrameLayout
                            android:layout_width="100dp"
                            android:layout_height="20dp"
                            android:id="@+id/frameLayout7"
                            android:background="#BDBDBD"
                            android:layout_marginBottom="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Low Power"
                            android:id="@+id/textView51"
                            android:textSize="17dp"
                            android:layout_marginLeft="7dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp" >

                        <FrameLayout
                            android:layout_width="100dp"
                            android:layout_height="20dp"
                            android:id="@+id/frameLayout8"
                            android:background="#BDBDBD" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Cover Removal"
                            android:id="@+id/textView52"
                            android:textSize="17dp"
                            android:layout_marginLeft="7dp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Consumption(Liter)"
                    android:id="@+id/textView37"
                    android:textSize="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:textColor="#01579B" />

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Time(sec)"
                    android:id="@+id/textView36"
                    android:layout_gravity="center_horizontal"
                    android:textSize="15dp"
                    android:textColor="#01579B" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</ScrollView>