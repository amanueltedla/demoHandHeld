<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dventus_hq.demohandheldapp.LiveConsumption"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:src="@drawable/dventus_logo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SMART WATER METER DATA LOGGER"
        android:id="@+id/textView25"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="7dp"
        android:textColor="#1B5E20"
        android:textSize="30dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Meter ID: "
            android:id="@+id/textView38"
            android:textSize="22dp"
            android:layout_gravity="center"
            android:textColor="#1B5E20"
            android:layout_marginLeft="10dp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioGroup"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="DVE0002221092"
                android:layout_marginTop="10dp"
                android:id="@+id/radioButton"
                android:checked="true"
                android:textSize="17dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="DVE0003021261"
                android:layout_marginTop="10dp"
                android:id="@+id/radioButton2"
                android:checked="false"
                android:textSize="17dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Flow Rate:"
            android:id="@+id/textView26"
            android:textSize="22dp"
            android:layout_gravity="center_vertical"
            android:textColor="#1B5E20"
            android:layout_marginLeft="10dp" />

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="#E0E0E0"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="39dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/flowLS"
                android:layout_gravity="center" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="LPM"
            android:id="@+id/textView27"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7dp"
            android:textSize="17dp" />

        <FrameLayout
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:background="#E0E0E0"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="27dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/flowGpm"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textStyle="bold" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="GPM"
            android:id="@+id/textView28"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7dp"
            android:textSize="17dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Consumption:"
            android:id="@+id/textView29"
            android:textSize="22dp"
            android:layout_gravity="center_vertical"
            android:textColor="#1B5E20"
            android:layout_marginLeft="10dp" />

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="#E0E0E0"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/consumptionLiters"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="20dp" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Liters"
            android:id="@+id/textView30"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7dp"
            android:textSize="17dp" />

        <FrameLayout
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:background="#E0E0E0"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/consumptionGallons"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textStyle="bold" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Gallons"
            android:id="@+id/textView31"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7dp"
            android:textSize="17dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Consumption Curve"
        android:id="@+id/textView41"
        android:textSize="22dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#1B5E20"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Consumption(Liter)"
        android:id="@+id/textView37"
        android:textSize="15dp"
        android:layout_marginLeft="5dp" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Time(sec)"
        android:id="@+id/textView36"
        android:layout_gravity="center_horizontal"
        android:textSize="15dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Alarms"
            android:id="@+id/textView35"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="10dp"
            android:textColor="#1B5E20" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <FrameLayout
                    android:layout_width="100dp"
                    android:id="@+id/reverseFrame"
                    android:layout_height="20dp"
                    android:background="#BDBDBD" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Reverse Flow"
                    android:id="@+id/textView33"
                    android:textSize="17dp"
                    android:layout_marginLeft="7dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <FrameLayout
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:id="@+id/leakFrame"
                    android:background="#BDBDBD" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Leak"
                    android:id="@+id/textView32"
                    android:textSize="17dp"
                    android:layout_marginLeft="7dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <FrameLayout
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:background="#BDBDBD"
                    android:id="@+id/contaminationFrame"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Contamination"
                    android:id="@+id/textView34"
                    android:textSize="17dp"
                    android:layout_marginLeft="7dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" >

                <FrameLayout
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:id="@+id/coverFrame"
                    android:background="#BDBDBD" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Cover Removal"
                    android:id="@+id/textView39"
                    android:textSize="17dp"
                    android:layout_marginLeft="7dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <FrameLayout
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:id="@+id/lowPowerFrame"
                    android:background="#BDBDBD"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Low Power"
                    android:id="@+id/textView40"
                    android:textSize="17dp"
                    android:layout_marginLeft="7dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
</ScrollView>